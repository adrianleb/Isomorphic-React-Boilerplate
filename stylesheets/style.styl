@import 'nib'
@import 'nib/reset'

html
  font-family: "Helvetica", sans-serif;
  font-size: 62.5%
  height: 100%
body
  font-size: 1.6rem
  height: 100%
  
body, html 
  margin 0
  padding 0
  
*, *:before, *:after
  position: relative
  box-sizing: border-box
  
  outline: none
  -webkit-font-smoothing: antialiased
  text-rendering: optimizeLegibility
